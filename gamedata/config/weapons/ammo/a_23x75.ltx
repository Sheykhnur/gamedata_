k_pierce                    = 0.4  ; [NOT USED]
k_impulse                   = 0.12  ; 0.1*10 ~= 1.0 ; Physical impact impulse koefficient
allow_ricochet              = false
impair                      = 1    ; Weapon condition decrease koefficient
