;-------------------------------------------------------------------------------
;------ disable params ---------------------------------------------------------

[disable]
linear_factor		= 1.0
angular_factor		= 1.0

;-------------------------------------------------------------------------------
;------ particle bones ---------------------------------------------------------

[particle_bones]
bip01_head			= 0,0,0
bip01_spine 		= 0,0,0
bip01_spine1		= 0,0,0
bip01_pelvis 		= 0,0,0

;-------------------------------------------------------------------------------
;------ foot bones -------------------------------------------------------------

[foot_bones]
front_left 			= bip01_l_toe0
front_right 		= bip01_r_toe0

;-------------------------------------------------------------------------------
;------ capture params ---------------------------------------------------------

[capture]
bone				= bip01_head			; кость для захвата
distance			= 0.3					; расстояние - меньше этого расстояния между костью и захвата целевого объекта захватывается
time_limit       	= 3			        	; максимальное время за попытку захвата объекта "сек"
pull_force       	= 8000					; максимальная сила, используемая, чтобы принести цель, чтобы захватить кости
pull_distance   	= 1.4					; расстояние до цели макс можно вытянуть
velocity_scale   	= 0.022					; масштаб скорости для вытягивания 1- нормальный
capture_force    	= 6500					; максимальное усилие для удержания цели

;-------------------------------------------------------------------------------
;------ End params -------------------------------------------------------------