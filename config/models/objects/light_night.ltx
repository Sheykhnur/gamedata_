[torch_definition]
range_max       = 30									; range max                <in meters> (increase this when range_curve is low to compensate, see formula below)
range_max_r2    = 24									; range max                <in meters>
range_curve     = 10 									; range curvature, the formula is: range = range_max * atan(range_curve * condition) / (pi/2)
range_min       = 8 ; DELETE
range_min_r2    = 8 ; DELETE
color           = 0.95,1.05,1.5,0.6						; four color components <r,g,b,a> 0.f<X<3.f
color_r2        = 1.05,0.9,1.5,0.6						; four color components <r,g,b,a> 0.f<X<3.f
omni_range      = 1.0									; range                 <in meters>
omni_range_r2   = 0.0									; range                 <in meters>
omni_color      = 1.0,0.9,0.9,0.3						; four color components <r,g,b,a> 0.f<X<3.f
omni_color_r2   = 0.5,1.0,1.0,0.2						; four color components <r,g,b,a> 0.f<X<3.f
color_animator  = headlamp									; color animator name   (empty - not using animator)
spot_texture    = lights\lights_bspot01		; spot texture name     (using only in Second Render)
spot_angle      = 50 ;40 ;80									; spot angle            <in gradus>
glow_texture    = glow\glow_torch_r2					; glow texture name     (required)
glow_radius     = 0.06									; glow radius           <in meters>
guide_bone      = cone_bone							; guid bone name        (required)
