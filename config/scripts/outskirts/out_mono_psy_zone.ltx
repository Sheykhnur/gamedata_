[sr_idle]
on_actor_inside = {!current_helmet(good_psy_helmet)} sr_psy_antenna@strong, {=current_helmet(good_psy_helmet)} sr_psy_antenna@weak
on_info = {+bas_switcher_off} nil %=release%

[sr_psy_antenna@strong]
