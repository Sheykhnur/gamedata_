;CODE-LOCKED DOOR INTO DARKLAB
[logic]
active = ph_door@locked

[ph_door@locked]
closed = true
locked = true
snd_open_start = metal_small_locked
on_info = {+dol_dar_door_unlocked} ph_door@closed %=play_snd_from_obj(6430:device\door_locked)%

[ph_door@closed]
closed = true
locked = false
snd_open_start = metal_small_open
snd_close_start = metal_small_close_start
snd_close_stop = metal_small_close_stop
on_use = ph_door@opened

[ph_door@opened]
closed = false
locked = false
snd_open_start = metal_small_open
snd_close_start = metal_small_close_start
snd_close_stop = metal_small_close_stop
on_use = ph_door@closed