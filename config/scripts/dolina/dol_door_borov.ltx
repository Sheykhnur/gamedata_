;DOOR TO BOROV'S ROOM
[logic]
active = ph_door@closed

[ph_door@closed]
closed = true
locked = false
snd_open_start = metal_small_open
snd_close_start = metal_small_close_start
snd_close_stop = metal_small_close_stop
on_use = ph_door@open
on_info = {+dol_leader_door_switch} ph_door@open_borov

[ph_door@open]
closed = false
locked = false
snd_open_start = metal_small_open
snd_close_start = metal_small_close_start
snd_close_stop = metal_small_close_stop
on_use = ph_door@closed

[ph_door@open_borov]
closed = false
locked = true
snd_open_start = metal_small_locked
on_use = ph_door@closed
on_info = {-dol_leader_door_switch} ph_door@closed