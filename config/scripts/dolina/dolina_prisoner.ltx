[smart_terrains]none = true[death@dol_prisoner]on_info = %+dol_prisoner_dead%[logic]active = walker@dol_prisonercombat_ignore = combat_ignoreon_death = death@dol_prisoner[walker@dol_prisoner]path_walk = dolina_prisoner_walkpath_look = dolina_prisoner_lookcombat_ignore_cond = alwaysdef_state_standing = prisoneron_actor_dist_le_nvis = 10 | walker@dol_prisoner_wait %=play_snd(characters_voice\scenario\dol\prisoner_wait)%on_info = {+dol_prison_gate_open} remark@dol_prisoner_wait_break[walker@dol_prisoner_wait]path_walk = dolina_prisoner_walkpath_look = dolina_prisoner_lookcombat_ignore_cond = alwaysdef_state_standing = prisoneron_info = {+dol_prison_gate_open} remark@dol_prisoner_wait_break[remark@dol_prisoner_wait_break]anim = waitcombat_ignore_cond = alwaystarget = actoron_info = {+dol_prisoner_free} walker@dol_prison_break %=play_snd(characters_voice\scenario\dol\best_of_luck)%[walker@dol_prison_break]path_walk = dol_prisoner_escape_routecombat_ignore_cond = alwaysdef_state_moving1 = sprintdef_state_moving2 = sprintdef_state_moving3 = sprinton_info = {-dol_prisoner_teleported} %=teleport_npc_not_seen(dol_prison_tele:dol_prisoner_teleported)%on_signal = reached| %=release +dol_prisoner_teleported%[combat_ignore]