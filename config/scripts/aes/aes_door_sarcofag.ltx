;DOOR TO THE SARCOPHAGUS
[logic]
active = ph_door@locked

[ph_door@locked]
closed = true
locked = true
snd_open_start = trader_door_locked
on_info = {+sar_code_door_unlocked} ph_door@closed
;on_actor_dist_le = 3| {-aes_sar_door_code_found -aes_sar_door_code_task} %+aes_sar_door_code_task%

[ph_door@closed]
closed = true
locked = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@open

[ph_door@open]
closed = false
locked = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@closed