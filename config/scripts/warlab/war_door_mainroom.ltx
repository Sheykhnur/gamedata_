;DOOR TO THE MAIN CONTROL ROOM
[logic]
active = ph_door@locked

[ph_door@locked]
closed = true
locked = true
snd_open_start = metal_small_locked
tip_open = bun_broken_lock
on_info = {+war_thing_defeated} ph_door@open

[ph_door@closed]
closed = true
locked = false
snd_open_start = metal_small_open
snd_close_start = metal_small_close_start
snd_close_stop = metal_small_close_stop
on_use = ph_door@open

[ph_door@open]
closed = false
locked = false
snd_open_start = metal_small_open
snd_close_start = metal_small_close_start
snd_close_stop = metal_small_close_stop
on_use = ph_door@closed