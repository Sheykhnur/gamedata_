;DOOR OPENED BY THE SCANNER
[logic]
active = ph_door@locked

[ph_door@locked]
closed = true
locked = true
snd_open_start = wood_door_locked
tip_open = bun_broken_lock
on_info = {+war_control_room_opened} ph_door@closed

[ph_door@closed]
closed = true
locked = false
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_use = ph_door@open

[ph_door@open]
closed = false
locked = false
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_use = ph_door@closed