;HOTEL ROOM #26 DOOR
[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
closed = true
snd_open_start = metal_small_locked
show_tips = false
on_info = {+pri_ghost_hotel} ph_door@closed

[ph_door@closed]
locked = false
closed = true
snd_open_start = metal_small_open
snd_close_start = metal_small_close_start
snd_close_stop = metal_small_close_stop
on_use = ph_door@open

[ph_door@open]
locked = false
closed = false
snd_open_start = metal_small_open
snd_close_start = metal_small_close_start
snd_close_stop = metal_small_close_stop
on_use = ph_door@closed