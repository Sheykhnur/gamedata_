;WOOD GATE INSIDE ARENA
[logic]
active = ph_gate@locked

[ph_gate@locked]
state = closed
locking = hard
breakable = false
on_info = {+bar_arena_door_2_open} ph_gate@open

[ph_gate@closed]
state = closed
;locked = stick
breakable = false
on_use = ph_gate@open
on_info = {+bar_arena_start -bar_arena_door_2_open} ph_gate@locked

[ph_gate@open]
state = open
;locked = stick
breakable = false
on_use = ph_gate@closed
on_info = {+bar_arena_start -bar_arena_door_2_open} ph_gate@locked