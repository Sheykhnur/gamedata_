;DOOR INTO BARKEEP'S BACKROOM
[logic]
active = ph_door@closed

[ph_door@closed]
closed = true
locked = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@open
on_info = {+yan_bar_help_start} ph_door@open

[ph_door@open]
closed = false
locked = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@closed

[ph_door@locked]
closed = true
locked = true
snd_open_start = trader_door_locked
on_info = {+cit_jail_door_open} ph_door@open
on_info2 = {+yan_bar_help_start} ph_door@open