[logic]
active = {-deactivate_radar_done} sr_idle, {+deactivate_radar_done} nil %=release%
 
[sr_idle]
on_actor_inside = {!current_helmet(good_psy_helmet) !current_helmet(bad_psy_helmet)} sr_timer@1 %=play_snd(characters_voice\scenario\radar\rad_hat_1)%
on_info = {+deactivate_radar_done} nil %=release%
 
[sr_timer@1]
type = dec
start_value = 275000
on_value = 5 | %=play_snd(characters_voice\scenario\radar\rad_hat_2)% | 0 | nil %=kill_actor%
on_actor_outside = sr_idle
on_info = {+deactivate_radar_done} nil %=release%
on_info2 = {=current_helmet(good_psy_helmet)} sr_idle@has_helm, {=current_helmet(bad_psy_helmet)} sr_idle@has_helm
string = st_helmet_countdown

[sr_idle@has_helm]
on_info = {+deactivate_radar_done} nil %=release%
