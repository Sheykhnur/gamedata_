[logic]
active = sr_idle

[sr_idle]
on_actor_inside = {+rad_reached_base -rad_scene_end} sr_idle@3
on_actor_outside = {+rad_reached_base -rad_scene_end} sr_idle@2

[sr_idle@2]
on_timer = 20000 | sr_idle@5

[sr_idle@3]
on_actor_outside = {+rad_reached_base -rad_scene_end} nil %+rad_actor_attacks_monolith =release%
on_info = {+rad_scene_end} sr_idle@4
on_timer = 20000 | {-rad_scene_start} sr_idle@5

[sr_idle@4]
on_actor_outside = nil %+rad_actor_attacks_monolith =release%

[sr_idle@5]
on_actor_inside = {+rad_reached_base -rad_scene_start} nil %+rad_actor_attacks_monolith =release%
on_actor_outside = {+rad_reached_base -rad_scene_start} nil %+rad_actor_attacks_monolith =release%
