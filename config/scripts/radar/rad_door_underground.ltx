;DOOR INTO THE MONO BASE UNDERGROUND
[logic]
active = ph_door@locked   
  
[ph_door@locked]  
locked = true
closed = true
snd_open_start = wood_door_locked
on_use = {=actor_has_item(forg_key)} ph_door@open %+rad_locked_door_open%

[ph_door@closed]  
locked = false   
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_use = ph_door@open

[ph_door@open]  
locked = false   
closed = false
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_use = ph_door@closed