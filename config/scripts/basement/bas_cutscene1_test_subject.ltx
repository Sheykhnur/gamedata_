[combat_ignore@subject]

[danger@subject]
ignore_types  = grenade, corpse, sound, hit
ignore_distance  = 0

[threshold@subject]
max_ignore_distance   = 0
ignore_monster        = 0

[logic]
active = walker@subject_to_tank
combat_ignore = combat_ignore@subject
danger = danger@subject
threshold = threshold@subject

[walker@subject_to_tank]
path_walk = bas_testlabrat_walk
combat_ignore_cond = always
danger = danger@subject
threshold = threshold@subject
;target = bas_testlabrat_look, 0
on_signal = subreached | remark@subject_tunk_wait
meet = no_meet

[remark@subject_tunk_wait]
combat_ignore_cond = always
danger = danger@subject
threshold = threshold@subject
target = bas_testlabrat_look, 0
meet = no_meet
on_timer = 2000 | {+bas_guard_reached} remark@subject_tunk, remark@subject_tunk_wait

[remark@subject_tunk]
anim = incapsulation_out_n
combat_ignore_cond = always
danger = danger@subject
threshold = threshold@subject
target = bas_testlabrat_look, 0
on_signal = anim_end | %+bas_labrat_finished%
on_info = {+bas_cs1_shut_down} walker@subject_random
meet = no_meet

[walker@subject_random]
path_walk = bas_subject_scaried
path_look = bas_subject_scaried_look
combat_ignore_cond = always
danger = danger@subject
threshold = threshold@subject
def_state_moving1 = run
def_state_moving2 = run
def_state_moving3 = run
target = bas_look_to_holo, 0
meet = no_meet