on_blowout = blink
osciallator = true
on_timer = 550 | ph_light_mgr@blink2
on_info = {+bas_blinking_finished} ph_light_mgr@end

[ph_light_mgr@blink2]
lights_on = always_on
on_blowout = blink
osciallator = true
on_timer = 450 | ph_light_mgr@blink1
