;DOOR INSIDE THE BUNKER
[logic]
active = ph_door@closed

[ph_door@closed]
closed = true
locked = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@open
on_info = {=is_blowout_happening} ph_door@blowout

[ph_door@open]
closed = false
locked = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_timer = 5000| ph_door@closed
on_use = ph_door@closed
on_info = {=is_blowout_happening} ph_door@blowout

[ph_door@blowout]
closed = false
locked = false
on_info = {!is_blowout_happening} ph_door@closed