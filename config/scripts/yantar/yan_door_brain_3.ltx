;BRAIN VAT DOOR #3 (FROM THE VAT TO THE UPPER LEVEL)
[logic]
active = ph_door@locked

[ph_door@locked]
closed = true
locked = true
snd_open_start = trader_door_locked
on_use = {=actor_has_item(yan_ecolog_key)} ph_door@open %=lost_item(yan_ecolog_key)%

[ph_door@open]
closed = false
locked = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@closed

[ph_door@closed]
closed = true
locked = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@open