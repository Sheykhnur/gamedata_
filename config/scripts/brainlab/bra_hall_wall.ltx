meet = no_meet
target = actor
on_timer = 25000 | remark@wall %+x16_additional2%

[remark@get_lost_wall]
anim = sci_talk
combat_ignore_cond = always
meet = no_meet
snd = x16_replics28
on_signal = sound_end | remark@wall