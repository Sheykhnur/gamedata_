;DOOR TO THE STALKERS' CAMP
[logic]
active = ph_door@closed

[ph_door@locked]
closed = true
locked = true
snd_open_start = wood_door_locked
on_info = {+forg_camp_door_open} ph_door@open

[ph_door@closed]
closed = true
locked = false
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_use = ph_door@open

[ph_door@open]
closed = false
locked = false
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_use = ph_door@closed