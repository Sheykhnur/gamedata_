[logic]
active = sr_idle

[sr_idle]
on_actor_inside = {+esc_nimble_work_task3_brain_helm} nil %=release%, {-esc_nimble_work_task3_brain_talk} sr_idle@1, sr_idle@01

[sr_idle@1]
on_actor_inside = {-esc_nimble_work_task3_brain_talk} sr_idle@2 %+esc_nimble_work_task3_brain%

[sr_idle@2]
on_actor_inside = %=run_postprocess(psi4:5000:false) =play_snd(ambient\random\rnd_the_horror2) =play_snd(affects\hit_fist) =run_cam_effector(fusker) =disable_ui%
on_timer = 3000| sr_teleport@1  %=play_snd(ambient\random\rnd_the_horror1) =enable_ui%
on_actor_inside2 = %=run_postprocess(alcohol:5002:false)%

[sr_teleport@1]
point1 = pirozhenko_look_6
look1 = pirozhenko_look_6
prob1 = 100
on_actor_outside = sr_idle

[sr_idle@01]
on_actor_inside = %=run_postprocess(alcohol:5002:false)%
on_actor_inside2 = {+esc_nimble_work_task3_brain_talk =check_active_detector(wave_registrator_detector)} sr_timer@02 %+esc_nimble_work_task3_brain_zamer%

[sr_timer@02]
type = dec
start_value = 138000
on_value = 60000 | %=run_postprocess(psi4:5000:true)% | 0 | sr_idle@03 %+esc_nimble_work_task3_brain_zamer_done%
on_actor_outside = sr_idle
on_info = {!check_active_detector(wave_registrator_detector)} sr_idle@01
string = st_measurements_countdown

[sr_idle@03]
on_actor_inside = %=run_postprocess(psi4:5000:true) =play_snd(ambient\random\rnd_the_horror2) =play_snd(affects\hit_fist) =run_cam_effector(fusker) =disable_ui%
on_timer = 1500| sr_teleport@1  %=stop_postprocess(5000) =stop_postprocess(5002) =play_snd(ambient\random\rnd_the_horror1) =enable_ui%
