throw_out_power 			= 0										;импульс с которым артефакт будет выброшен из зоны в произвольном направлении
artefact_spawn_height 		= 1										;(м) высота на центром зоны где будет рожден артефакт
artefact_spawn_cicles		= 1										;Кол-во циклов на проверку шанса спавна арта Поумолчанию = 2


