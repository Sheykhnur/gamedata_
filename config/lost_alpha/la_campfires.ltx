[options]
debug      = true ;--/ false/true - от(в)ключен режим отладки
period     = 3000  ;--/ период обновления фаз (3 сек)
turn_flame = campfire\dyingfire ;--dyn_kfire\dyingfire ;--/#!# партиклы пламени (Внимание! Требуется модифицированный: particles.xr)

[time_phases] ;--/ время (ms) длительности фазы
 2 =  18000 ;--/ [2]фаза зажигания - вкл.свет (~18 сек)
 1 =   5000 ;--/ [1]фаза зажигания - вкл.пламя (~5 сек)
 0 =  10000 ;--/ [1]фаза затухания - вкл.партиклы затухания (~10 сек)
-1 =  15000 ;--/ [2]фаза затухания - откл.пламя (~15 сек)
-2 = 180000 ;--/ [3]фаза затухания - откл.свет (~180 сек)
-3 = 240000 ;--/ [4]фаза затухания - откл.партиклы затухания (~240 сек)

